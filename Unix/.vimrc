set encoding=utf-8
set ttyfast

set modeline
set modelines=5

filetype plugin indent on

set ruler
set relativenumber

set ignorecase
set smartcase
set gdefault
set incsearch
set showmatch

set splitright
set splitbelow

nmap ; :
nmap <Tab> <C-w>

"nmap M :!make; open my-sigconf.pdf<CR>

set tabstop=4
set shiftwidth=4
set smarttab
set smartindent
set expandtab

set laststatus=2

syntax on
